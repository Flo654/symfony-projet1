{% extends "base.html.twig" %}
{% block title %}Accueil{% endblock %}
{% block body %}

<h1 class="text-center">Bienvenue sur la page d'accueil</h1>
<section class="row ">
    <div class="col-md-8">
        <div class="row justify-content-center">
            {% for article in articles %}
                <div class="card col-md-3 m-1" style="width: 25rem;">
                    <p class="date">Ecrit le  {{article.createdAt | date("d/m/Y") }} Ã  {{article.createdAt | date("H:m") }} par {{article.author}}</p>
                    <img class="card-img-top" src="assets/blog/images/{{ article.image }}" alt="{{article.title}}">
                    <div class="card-body">
                        <h5 class="card-title">{{article.title}}</h5>
                        
                        <a href="{{ path('show', { 'id' : article.id })}}" class="btn btn-primary">En savoir plus</a>
                    </div>
                </div>        
            {% endfor %}
        </div>
    </div>
    <div class="col-md-4">
        <h2>Categories</h2>
        {% for category in categories %}
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ category.title}}
                    <span class="badge badge-primary badge-pill">{{category.articles | length}} article(s)</span>
                </li>                
            </ul>
            
        {% endfor %}
    </div>
</section>


{% endblock %}